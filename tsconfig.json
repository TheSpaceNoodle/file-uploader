{
    "compilerOptions": {
        "moduleDetection": "force",
        "target": "es6",
        "module": "Preserve",
        "outDir": "./dist",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}