<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Uploader - Folder</title>
</head>
<body>
    <header>
        <h1>Folder: <%= folder.name %></h1>
        <nav>
            <a href="/">Home</a>
            <a href="/share/<%= folder.id %>">Share Folder</a>
            <a href="/folders/<%= folder.id %>/delete">Delete Folder</a>
            <button id="renameFolderBtn">Rename Folder</button>
        </nav>
    </header>

    <main>
        <section id="fileList">
            <h2>Files</h2>
            <ul>
                <% folder.File.forEach(function(file) { %>
                    <li>
                        <span><%= file.name %></span>
                        <button onclick="deleteFile('<%= file.id %>')">Delete</button>
                    </li>
                <% }); %>
            </ul>
        </section>

        <section id="uploadSection">
            <h2>Upload File</h2>
            <form action="/folders/file/upload" method="post" enctype="multipart/form-data">
                <input type="file" name="file" required>
                <button type="submit">Upload</button>
            </form>
        </section>
    </main>

    <dialog id="renameFolderModal">
        <div class="modal-content">
            <span id="modalClose">&times;</span>
            <form action="/folders/<%= folder.id %>/update" method="post">
                <label for="name">New Name:</label>
                <input type="text" id="name" name="name" required>
                <button type="submit">Rename</button>
            </form>
        </div>
    </div>

    <script>
        const modal = document.getElementById('renameFolderModal');

        document.getElementById('renameFolderBtn').onclick = function() {
            modal.showModal()
        };

        document.getElementById('modalClose').onclick = function() {
            modal.close()
        };

        function deleteFile(fileId) {
            if (confirm('Are you sure you want to delete this file?')) {
                fetch(`/file/${fileId}/delete`, { method: 'DELETE' })
            }
        }
    </script>
</body>
</html>